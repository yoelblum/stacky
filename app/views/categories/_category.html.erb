<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-push-2">
      <table class="table table-striped table-hover">
        <thead>
        <tr>
          <td>name</td>
          <td>2017</td>
          <td>all time</td>
        </tr>
        </thead>

        <% @scores.each_with_index do |tag, index| %>
            <tr class="tag-score-container">
              <td>
                <a href="/tags/<%=tag[:id]%>"><%= tag[:name] %></a>
                <img class="tag-logo" src='<%= tag[:image_url] %>' />
              </td>
              <td>
                <span class="rank"><%= tag[:rank] %></span> <span>( <%= tag[:score]%> )</span>
              </td>
              <td>
                <span class="rank"><%= tag[:alltime_rank] %></span><span class="score"> (<%= tag[:alltime_score] %>)</span>
              </td>

            </tr>

        <% end %>

      </table>
    </div>
  </div>




</div>